<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Test" parallel="tests" thread-count="2">
    <test name="All Tests - Chrome">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="Tests.ValidLoginTest"/>
            <class name="Tests.InvalidLoginTest"/>
            <class name="Tests.ProductAddToCartTest"/>
        </classes>
    </test>
    <test name="All Tests - Edge">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="Tests.ValidLoginTest"/>
            <class name="Tests.InvalidLoginTest"/>
            <class name="Tests.ProductAddToCartTest"/>
        </classes>
    </test>
</suite>